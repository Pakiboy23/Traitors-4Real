rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /playerPortraits/{docId} {
      allow read, write: if true;
    }
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null
        && request.auth.token.email in ['s.haarisshariff@gmail.com'];
    }
  }
}
